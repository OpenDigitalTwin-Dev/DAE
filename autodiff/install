sudo apt install g++ gcc make cmake python3 ccache

mkdir build
cd build
cmake .. -DCMAKE_INSTALL_PREFIX=$PWD/../../install/autodiff_install -DCatch2_DIR=$PWD/../../../install/catch2_install/lib/cmake/Catch2
make -j4
make install